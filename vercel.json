{
  "version": 2,
  "builds": [
    { "src": "server.js", "use": "@vercel/node" },
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/download", "dest": "/api/download.js" },
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)\\.js", "dest": "/$1.js" },
    { "src": "/(.*)\\.css", "dest": "/$1.css" },
    { "src": "/(.*)\\.ico", "dest": "/$1.ico" },
    { "src": "/(.*)\\.png", "dest": "/$1.png" },
    { "src": "/(.*)", "dest": "/server.js" }
  ]
}